<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_birthday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modifyBackground"
    tools:context="com.qf.story.view.ModifyBirthdayActivity">
    <com.qf.story.view.MyActionBar
        android:id="@+id/myActionBar_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_below="@+id/myActionBar_birthday"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/modifyBirthdayTEV"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/modifyBirthday_tev"
            />

        <EditText
            android:layout_toRightOf="@+id/modifyBirthdayTEV"
            android:id="@+id/modifyBirthdayEDT"
            android:layout_width="280dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:hint="@string/modifyBirthday_hint"
            android:textColorHint="@color/modifyBackground"
            android:background="@null"
            />
    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:text="@string/modify"
        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="btnModify"
        android:background="@drawable/bottm_bg"/>
</RelativeLayout>
